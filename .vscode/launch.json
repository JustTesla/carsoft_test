    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug on Docker",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/": "${workspaceFolder}"
            }
        },
        {
            "type": "php",
            "request": "launch",
            "name": "bin/console",
            "program": "${workspaceFolder}/bin/console"
        },
        {
            "type": "php",
            "request": "launch",
            "name": "doctrine:database:create",
            "program": "${workspaceFolder}/bin/console",
            "args": ["doctrine:database:create", "--no-interaction", "--if-not-exists"]
        },
        {
            "type": "php",
            "request": "launch",
            "name": "phpunit",    
            "program": "${workspaceFolder}/bin/phpunit",
            "args": [
                "-c",
                "phpunit.xml.dist",
                "--coverage-clover",
                "/opt/phpstorm-coverage/cov.xml"
            ],
            "env": {"APP_ENV": "test", "XDEBUG_MODE": "coverage"}
        },
        {
            "type": "php",
            "request": "launch",
            "name": "test/doctrine:database:create",
            "program": "${workspaceFolder}/bin/console",
            "args": ["doctrine:database:create", "--no-interaction", "--if-not-exists"],
            "env": {"APP_ENV": "test"}
        },
        {
            "type": "php",
            "request": "launch",
            "name": "test/doctrine:migrations:migrate",
            "program": "${workspaceFolder}/bin/console",
            "args": ["doctrine:migrations:migrate", "--no-interaction", "--allow-no-migration"],
            "env": {"APP_ENV": "test"}
        },
        {
            "type": "php",
            "request": "launch",
            "name": "test/doctrine:fixtures:load",
            "program": "${workspaceFolder}/bin/console",
            "args": ["doctrine:fixtures:load", "--no-interaction"],
            "env": {"APP_ENV": "test"}
        }
    ]
}